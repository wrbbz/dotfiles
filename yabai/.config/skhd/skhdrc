# open terminal, blazingly fast compared to iTerm/Hyper
cmd + shift - return : /Applications/Alacritty.app/Contents/MacOS/Alacritty 
cmd - space : yabai -m window --toggle zoom-fullscreen

# focus previous or next window in window tree
cmd - k : yabai -m window --focus prev
cmd - j : yabai -m window --focus next

# Focus next/prev space
cmd + shift - k : yabai -m space --focus prev
cmd + shift - j : yabai -m space --focus next

# float / unfloat window and center on screen
cmd + alt - t : yabai -m window --toggle float;\
                yabai -m window --grid 4:4:1:1:2:2

# Focus space with mission-control index
cmd - 1 : yabai -m space --focus 1
cmd - 2 : yabai -m space --focus 2
cmd - 3 : yabai -m space --focus 3
cmd - 4 : yabai -m space --focus 4
cmd - 5 : yabai -m space --focus 5
cmd - 6 : yabai -m space --focus 6
cmd - 7 : yabai -m space --focus 7
cmd - 8 : yabai -m space --focus 8
cmd - 9 : yabai -m space --focus 9

# Rotate the window tree clock-wise
cmd -r : yabai -m window --toggle split

# Toggle float
cmd + shift - t : yabai -m window --toggle float

# Toggle gaps & padding
cmd - g : yabai -m space --toggle padding && \
          yabai -m space --toggle gap
