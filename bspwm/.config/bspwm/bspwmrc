#! /bin/sh

$HOME/.config/bspwm/autostart

xsetroot -cursor_name left_ptr
# 
# setxkbmap -layout "us,ru" option "grp:escape,grp_led:caps"
# xmodmap ~/.Xmodmap

#xrandr --output DP-1 --auto --rotate left --left-of DP-2
#xrandr --output DP-2 --pos 1440x600
bspc monitor -d 1 2 3 4 5 6 7 8 9
#bspc monitor DP-1 -d I II III IV V 
#bspc monitor DP-2 -d VI VII VIII IX X

bspc config border_width			0
bspc config window_gap				20
bspc config top_padding				3

bspc config split_ratio				0.50
bspc config borderless_monocle		true
bspc config gapless_monocle			false
bspc config focus_follows_pointer	true

bspc config normal_border_color		"#3c3836"
bspc config focused_border_color	"#ebdbb2"
bspc config presel_feedback_color	"#7c6f64"

bspc rule -a '*:zathura' state=tiled desktop=^3 follow=on
bspc rule -a '*:telegram-desktop' state=tiled desktop=^5
bspc rula -a feh state=floating

compton --config $HOME/.config/compton.conf -b
sh ~/.scripts/fehbg
watch -n 600 ~/.scripts/battery

