#
# wm independent hotkeys
#
Caps_Lock
	$HOME/.scripts/layout
# terminal emulator
super + Return
	alacritty	

# GNOME System Monitor
ctrl + shift + Escape
	alacritty -e htop

# program launcher
super + space
	rofi -show run

super + p
	rofi-pass

# rofi -show run -lines 10 -padding 300 -opacity "100" -font "Roboto Mono 15" -width 1368 -separator-style "none" -hide-scrollbar -color-window "argb:dd000000, argb:0002b36, argb:7bffffff" -color-normal "argb:0ffffff, #ffffff, argb:0eee8d5, #ffffff, #000000" -color-active "argb:0fdf6e3, #268bd2, argb:0eee8d5, #268bd2, #fdf6e3" -color-urgent "argb:0fdf6e3, #dc322f, argb:0eee8d5, #dc322f, #fdf6e3"	

super + shift + space
	rofi -show drun

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd; \
	notify-send --app-name=sxhkd --urgency=normal "sxhkd config reloaded"

# Lock Desktop
# alt + l
XF86Favorites
    dunstify --urgency=normal "Screen is locking" -r 3005; \
	$HOME/.scripts/lock

ctrl + alt + d
	$HOME/.scripts/date	

ctrl + alt + b
	$HOME/.scripts/battery

# QuteBrowser
super + q
	notify-send --app-name=qutebrowser --urgency=normal "browser is running with webengine backend" & qutebrowser --backend webengine 
#
# bspwm hotkeys
#

# quit bspwm normally
super + alt + Escape
	notify-send --app-name=bspc --urgency=critical "Quit from bspc" && bspc quit

# close and kill
super + {_,shift + }w
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# if the current node is automatic, send it to the last manual, otherwise pull the last leaf
super + y
	bspc query -N -n focused.automatic && bspc node -n last.!automatic || bspc node last.leaf -n focused

# swap the current node and the biggest node
super + g
	bspc node -s biggest

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {x,y,z}
	bspc node -g {locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
# super + {p,b,comma,period}
# 	bspc node -f @{parent,brother,first,second}

# focus the next/previous node
super + {_,shift + }c
	bspc node -f {next,prev}; \
	$HOME/.scripts/desktop

# focus the next/previous desktop
super + bracket{left,right}
	bspc desktop -f {prev,next}; \
	$HOME/.scripts/desktop

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last; \
	$HOME/.scripts/desktop

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on; \
	$HOME/.scripts/desktop

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'; \
	$HOME/.scripts/desktop

# focus the next/previous node in the same window
super + {comma,period}
    bspc node -f {next,prev}.local

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

super + {equal,minus} 
	bspc config window_gap $(( $(bspc config window_gap) {+,-} 5 ))

super + ctrl + {Left,Right,Up,Down}
    bspc node @focused:/ --rotate {270,90,180,180}

# Screenshots
Print
	scrot $HOME/screenshots/%Y-%m-%d-%T-screenshot.png; \
	notify-send "Screenshot saved"

ctrl + Print
	gnome-screenshot -c; \
	notify-send "Screenshot copied to clipboard"

shift + Print
	gnome-screenshot -a; \
	notify-send "Screenshot saved"

ctrl + shift + Print
	gnome-screenshot -ac; \
	notify-send "Screenshot copied to clipboard and saved"

# Tizonia-rmote

XF86Back
	tizonia-remote prev

XF86Forward
	tizonia-remote next

XF86AudioPlay
	$HOME/.scripts/tizonia_toggle	
# VOLUME

### Mute
XF86AudioMute
	pulsemixer --toggle-mute

### Master Volume
XF86AudioRaiseVolume
	pulsemixer --change-volume +1

super + XF86AudioRaiseVolume
	pulsemixer --change-volume +5

XF86AudioLowerVolume
	pulsemixer --change-volume -1

super + XF86AudioLowerVolume
	pulsemixer --change-volume -5

# BRIGHTNESS

# Brightness goes up
#XF86MonBrightnessUp
super + F6
	/home/gamehelp16/Documents/brightness -u

# Brightness goes down
# XF86MonBrightnessDown
super + F5
	/home/gamehelp16/Documents/brightness -d	#
